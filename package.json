{
  "name": "gitinfo-ts",
  "description": "get git information",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "source": "./index.ts",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "rimraf dist && npx rollup -c && tsc --emitDeclarationOnly",
    "clear": "rimraf dist && rimraf node_modules",
    "type-check": "tsc --noEmit",
    "lint": "eslint ./functions/**/*.ts",
    "lint:fix": "eslint ./functions/**/*.{ts,js} --fix",
    "pub": "pnpm lint:fix && pnpm build && npm publish",
    "test": "vitest --dom",
    "coverage": "vitest run --coverage"
  },
  "keywords": [],
  "author": "niboac@sohu.com",
  "license": "MIT",
  "simple-git-hooks": {
    "pre-commit": "pnpm run lint",
    "commit-msg": "node scripts/verifyCommit.mjs $1"
  },
  "devDependencies": {
    "@types/node": "^20.14.1",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "eslint": "^9.4.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "lint-staged": "^15.2.5",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.9.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^25.0.8",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6"
  }
}